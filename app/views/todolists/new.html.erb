<h1>New Todolist</h1>
<div class="row">
  <div class="span6">
    <p> You can submit your new todo items here.</p>
  
    <div class="span 6">
      <%= form_for @todolist do |f| %>
        <div class="control-group">
        <%= f.label :description, class: 'control-label' %>
        <%= f.text_field :description %>
        </div>
        <%= f.submit "Save", class: 'btn btn-primary pull-right' %>
      <% end %>
    </div>
</div>
